---
import "../styles/global.css";
import "@fontsource/acme";
import LandingHeader from "../components/LandingHeader.astro";
import Herosection from "../components/Herosection.astro";
import ModelX from "../components/ModelX.astro";
import ModelY from "../components/ModelY.astro";
import ModelZ from "../components/ModelZ.astro";
---

<!doctype html>
<html lang="en" class="overflow-x-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Venta de carros</title>
  </head>
  <body class="overflow-x-hidden">
    <LandingHeader />
    <main
      class="snap-y snap-mandatory w-full h-screen overflow-y-auto overflow-x-hidden"
    >
      <div class="snap-center">
        <Herosection />
      </div>
      <div class="snap-center">
        <ModelX />
      </div>
      <div class="snap-center">
        <ModelY />
      </div>
      <div class="snap-center">
        <ModelZ />
      </div>
    </main>
  </body>
</html>

<style>
  body {
    font-family: "Acme", sans-serif;
  }
</style>
